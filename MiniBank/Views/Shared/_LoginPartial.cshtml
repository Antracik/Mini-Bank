@using Services.Services
@inject IUserService  UserService

<ul class="navbar-nav ml-auto">
    @if (UserService.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link text-dark dropdown-toggle" href="#"
               id="navbarDropdownMenuLink" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">Hello @UserService.GetUserName(User)!</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="dropdown-item">Account</a>
                <a asp-area="Identity" asp-page="/Account/Manage/SetPassword" class="dropdown-item">Change Password</a>
                <a asp-area="Identity" asp-page="/Account/Manage/TwoFactorAuthentication" class="dropdown-item">Two Factor Authentication(2FA)</a>
                <a asp-area="Identity" asp-page="/Account/Manage/PersonalData" class="dropdown-item">Personal Data</a>
            </div>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
