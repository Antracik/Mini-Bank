@model Mini_Bank.Models.RegistrantModel

@using Shared;
@using Mini_Bank.Extensions;

@{
    ViewData["Title"] = "DetailsRegistrant";
}

@{ 
    var country = CountryEnum.Countries.Germany;
}

<h1>Registrant Details</h1>

<div>
    <h4>Details for selected Registrant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.CountryId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.CountryModel.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.CountryId"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.LongCountryName(country)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.CountryId"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.ShortCountryName(country)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Address"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
    </dl>
</div>
<h5>
    <a asp-controller="Registrant" asp-action="EditRegistrantView" asp-route-id="@Model.Id">Edit Registrant</a> |
    <a asp-controller="Registrant" asp-action="DeleteRegistrant" asp-route-id="@Model.Id">Delete Registrant</a> |
    <a asp-controller="Wallet" asp-action="CreateWalletView" asp-route-id="@Model.Id">Create Wallet</a>
</h5>
@if (Model.Wallets.Count > 0)
{
    <partial name="~/Views/Wallet/DisplayWallets.cshtml" model="Model.Wallets" />
}
else
{
    <h5>No wallets linked to user</h5>
}

<div>
    <a asp-action="DisplayRegistrants">Back to Registrant List</a>
</div>
