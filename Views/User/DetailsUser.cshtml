@model Mini_Bank.Models.UserModel

@{
    ViewData["Title"] = "DetailsUser";
}

<h1>Details User</h1>

<div>
    <h4>Details for selected User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Email"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Password"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Password
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.IsAdmin"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.IsAdmin
        </dd>
    </dl>
    <h5>
        <a asp-controller="User" asp-action="EditUserView" asp-route-id="@Model.Id">Edit User</a> |
        <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id">Delete User</a>
    </h5>

    @if (Model.Registrant != null)
    {
        <a asp-controller="Registrant" asp-action="DetailsRegistrant" asp-route-id="@Model.Registrant.Id">User Information</a>
    }
    else
    {
        <a asp-controller="Registrant" asp-action="CreateRegistrantView" asp-route-id="@Model.Id"> Add Registrant Info </a>
    }
</div>
<br />
<div>
    <a asp-action="DisplayUsers">Back to User List</a>
</div>
