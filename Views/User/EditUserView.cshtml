@model Mini_Bank.Models.UserModel

<h4>Edit User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditUser">
            @if (!ViewData.ModelState.IsValid)
            {
            <div asp-validation-summary="ModelOnly" class="text-danger"> There were errors </div>
            }
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control" value="@Model.Email"/>
            @if(!ViewData.ModelState.IsValid && ViewData.ModelState["Email"].Errors.Count > 0)
            { 
                <span asp-validation-for="Email" class="text-danger"> @ViewData.ModelState["Email"].Errors[0].ErrorMessage </span>
            }
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Password"].Errors.Count > 0)
            {
                <span asp-validation-for="Password" class="text-danger"> @ViewData.ModelState["Password"].Errors[0].ErrorMessage </span>
            }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
