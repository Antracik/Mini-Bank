@model Mini_Bank.Models.AccountModel

@{
    ViewData["Title"] = "CreateAccountView";
}

<h1>CreateAccountView</h1>

<h4>AccountModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateAccount">
            <input type="hidden" asp-for="WalletId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IBAN" class="control-label"></label>
                <input asp-for="IBAN" class="form-control" />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["IBAN"].Errors.Count > 0)
            {
                <span asp-validation-for="IBAN" class="text-danger">@ViewData.ModelState["IBAN"].Errors[0].ErrorMessage</span>
            }
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Balance"].Errors.Count > 0)
            {
                <span asp-validation-for="Balance" class="text-danger">@ViewData.ModelState["Balance"].Errors[0].ErrorMessage</span>
            }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>