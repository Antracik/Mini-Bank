@model Mini_Bank.Models.AccountModel

@{
    ViewData["Title"] = "DetailsAccount";
}

<h1>Details Account</h1>

<div>
    <h4>Details for selected Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.IBAN"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.IBAN
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Balance"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Balance.ToString("N")
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.CurrencyId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Currency.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.AccountStatusId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Status.Name
        </dd>
    </dl>
</div>
<h5>
    <a asp-controller="Account" asp-action="EditAccountView" asp-route-id="@Model.Id">Edit</a> |
    <a asp-controller="Account" asp-action="DeleteAccount" asp-route-id="@Model.Id">Delete</a>
</h5>
