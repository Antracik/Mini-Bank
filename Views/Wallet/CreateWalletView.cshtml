@model Mini_Bank.Models.WalletModel

@{
    ViewData["Title"] = "CreateWalletView";
}

<h1>CreateWalletView</h1>

<h4>WalletModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateWallet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegistrantId"/>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
             @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Number"].Errors.Count > 0)
             {
                <span asp-validation-for="Number" class="text-danger">@ViewData.ModelState["Number"].Errors[0].Exception</span>
             }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
