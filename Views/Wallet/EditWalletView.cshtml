@model Mini_Bank.Models.WalletModel

@{
    ViewData["Title"] = "EditWalletView";
}

<h1>EditWalletView</h1>

<h4>WalletModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditWallet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegistrantId" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsVerified" /> <label asp-for="IsVerified"></label>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
