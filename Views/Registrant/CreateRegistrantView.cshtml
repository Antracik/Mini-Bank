@model Mini_Bank.Models.RegistrantModel

@{
    ViewData["Title"] = "CreateRegistrantView";
}

<h1>Create Registrant</h1>

<h4>Registrant Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateRegistrant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["FirstName"].Errors.Count > 0)
                {
                    <span asp-validation-for="FirstName" class="text-danger">@ViewData.ModelState["FirstName"].Errors[0].ErrorMessage</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["LastName"].Errors.Count > 0)
                {
                    <span asp-validation-for="LastName" class="text-danger">@ViewData.ModelState["LastName"].Errors[0].ErrorMessage</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <input asp-for="CountryId" class="form-control" />
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Country"].Errors.Count > 0)
                {
                    <span asp-validation-for="CountryId" class="text-danger">@ViewData.ModelState["Country"].Errors[0].ErrorMessage</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Address"].Errors.Count > 0)
                {
                    <span asp-validation-for="Address" class="text-danger">@ViewData.ModelState["Address"].Errors[0].ErrorMessage</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
