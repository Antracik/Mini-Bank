@model Mini_Bank.Models.RegistrantModel

@{
    ViewData["Title"] = "DetailsRegistrant";
}

<h1>Registrant Details</h1>

<div>
    <h4>Details for selected Registrant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="@Model.Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Country"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Address"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
    </dl>
</div>
